# FeedForward Production Configuration
# Copy this to .env and update with your production values

# Application Configuration
APP_DOMAIN=https://feedforward.yourdomain.com

# Security - Generate strong random values for production
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_STRING
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_STRONG_RANDOM_STRING

# Admin Account - Change these!
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=ChangeThisStrongPassword123!

# Database
DATABASE_PATH=/opt/feedforward/data/users.db

# SMTP Configuration for Email (Required for invitations)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=FeedForward <noreply@yourdomain.com>

# Production Settings
DEBUG=false
ENVIRONMENT=production

# LLM settings
DEFAULT_LLM_MODEL=gpt-4o
DEFAULT_LLM_TEMPERATURE=0.2
DEFAULT_LLM_MAX_TOKENS=4000

# API Keys (Required - Add keys for providers you want to use)
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (Optional)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google (Optional)
# GOOGLE_API_KEY=your-google-api-key-here

# Other providers (Optional)
# GROQ_API_KEY=your-groq-api-key-here
# TOGETHERAI_API_KEY=your-togetherai-api-key-here
# HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Local models (Optional)
# OLLAMA_API_BASE=http://localhost:11434

# LiteLLM Configuration
LITELLM_CACHE=True
LITELLM_CACHE_TIMEOUT=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=/opt/feedforward/data/feedforward.log

# Performance
WORKERS=4
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Session Configuration
SESSION_TIMEOUT=86400  # 24 hours in seconds
SESSION_SECURE=true    # Ensure cookies are HTTPS only

# Rate Limiting (Optional)
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_PERIOD=3600  # 1 hour

# Monitoring (Optional)
# SENTRY_DSN=your-sentry-dsn-here
# OTEL_ENDPOINT=your-opentelemetry-endpoint